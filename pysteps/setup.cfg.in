[metadata]
name = steps
version = attr: steps.__version__
author = STEPS Development Team
author_email = steps.dev@gmail.com
description = STochastic Engine for Pathway Simulation
license = GNU General Public License Version 3

[options]
packages = find:
python_requires = >=3.8
install_requires =
    numpy>=1.19
    scipy>=1.5

[options.packages.find]
include = ${STEPS_INCLUDE_PACKAGES_SETUP}

[options.extras_require]
mpi =
    mpi4py>=3.1
dist =
    mpi4py>=3.1
hdf5 =
    h5py>=3.1
cov =
    coverage>=5.0
test = 
    matplotlib>=3.2
blender =
    matplotlib>=3.2
